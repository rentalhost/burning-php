{
    /**
     * Burning output session folder format, that will be stored at Burning control directory.
     *
     * Placeholders:
     * - {%requestMs}  will be replaced by the request time microseconds.
     *
     * @type {string}
     */
    "burningSessionFolderFormat": "session-{%requestMs}",

    /**
     * Disable the Processor file cache.
     * You should disable it only if you are modifying the Burning source.
     *
     * Actually, the cache files will be generated anyway, but it will be regenerated every time that it is requested.
     *
     * @type {boolean}
     */
    "disableCache": false,

    /**
     * Allow Xdebug when it is enabled on your php.ini.
     * By default, if Xdebug is identified and active, it will disable before process start.
     *
     * Caution: it will slow down the Burning processing about 5x~10x.
     *
     * @type {boolean}
     */
    "allowXdebug": false,

    /**
     * Enabling this option will includes the development paths declared in composer.json[autoload-dev].
     *
     * @type {boolean}
     */
    "includeDevelopmentPaths": false
}
