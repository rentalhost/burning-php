{
    /**
     * Burning control directory, based on the current working dir.
     *
     * @type {string}
     */
    "burningDirectory": ".burning",

    /**
     * Burning output session folder format, that will be stored at Burning control directory.
     *
     * Placeholders:
     * - {%requestMs}  will be replaced by the request time microseconds.
     *
     * @type {string}
     */
    "burningSessionFolderFormat": "session-{%requestMs}",

    /**
     * Disable the Processor file cache.
     * You should disable it only if you are modifying the Burning source.
     *
     * Actually, the cache files will be generated anyway, but it will be regenerated every time that it is requested.
     *
     * @type {boolean}
     */
    "disableCache": false,

    /**
     * Disable Xdebug if it is enabled on your php.ini.
     * It will speed up Burning in 5~10x.
     *
     * @type {boolean}
     */
    "disableXdebug": true,

    /**
     * Enabling this option will ignore all development paths declared in composer.json[autoload-dev].
     * It is useful to ignore testing files that will not be so useful on analysis process.
     *
     * @type {boolean}
     */
    "ignoreDevelopmentPaths": true
}
