{
    "type": "composer-plugin",
    "name": "rentalhost/burning-php",
    "description": "A very complete PHP code analysis.",
    "version": "0.1.0",
    "license": "MIT",

    "keywords": [ "profiling", "performance", "dead-code", "analysis", "code-coverage", "coverage", "debug", "debugger", "burning" ],

    "authors": [
        {
            "name": "David Rodrigues",
            "email": "david.rodrigues@rentalhost.net",
            "homepage": "https://rentalhost.net",
            "role": "Developer"
        }
    ],

    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "composer-plugin-api": "^1.1",
        "composer/composer": "^1.9",
        "composer/xdebug-handler": "^1.4",
        "colinodell/json5": "^2.1",
        "symfony/filesystem": "^5.0 || ^4.4",
        "nikic/php-parser": "^4.3"
    },

    "autoload": {
        "psr-4": {
            "Rentalhost\\BurningPHP\\": "src/"
        }
    },

    "extra": {
        "class": "Rentalhost\\BurningPHP\\Composer\\ComposerPlugin"
    }
}
